{
  "manifest_version": 3,
  "name": "Invinsense",
  "version": "2.1.0",
  "description": "Invinsense Dashboard - Your personalized new tab with dynamic wallpapers, cybersecurity news, bookmarks, and security tips",
  "permissions": [
    "storage",
    "bookmarks",
    "tabs",
    "favicon"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_title": "Invinsense Dashboard",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/scripts/overlay.js"
      ],
      "css": [
        "assets/style/overlay.css"
      ],
      "run_at": "document_start"
    }
  ]
}